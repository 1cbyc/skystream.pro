# --------------------------------------------------------------------------
# Application Environment
# --------------------------------------------------------------------------
#
# Set the environment for your application. Allowed values:
# local, production, testing
#
APP_NAME="SkyStream"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# --------------------------------------------------------------------------
# Logging Configuration
# --------------------------------------------------------------------------
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# --------------------------------------------------------------------------
# Database Connection (MySQL)
# --------------------------------------------------------------------------
# These values should match the `db` service in docker-compose.yml
#
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=skystream
DB_USERNAME=skystream_user
DB_PASSWORD=secret
DB_ROOT_PASSWORD=root_secret # Only used by docker-compose

# --------------------------------------------------------------------------
# Caching & Session Driver (Redis)
# --------------------------------------------------------------------------
# These values should match the `redis` service in docker-compose.yml
#
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# --------------------------------------------------------------------------
# Queue Driver (Redis)
# --------------------------------------------------------------------------
# Using Redis for background jobs
#
QUEUE_CONNECTION=redis

# --------------------------------------------------------------------------
# S3-Compatible File Storage (MinIO)
# --------------------------------------------------------------------------
# These values should match the `minio` service in docker-compose.yml
#
FILESYSTEM_DISK=s3
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=skystream
AWS_ENDPOINT=http://minio:9000
AWS_USE_PATH_STYLE_ENDPOINT=true

# --------------------------------------------------------------------------
# External Service API Keys
# --------------------------------------------------------------------------
# You need to obtain these keys from the respective services.
#
NASA_API_KEY=YOUR_NASA_API_KEY
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# --------------------------------------------------------------------------
# CORS & Sanctum Configuration
# --------------------------------------------------------------------------
# Set the frontend URL to allow API requests from the Next.js app.
#
FRONTEND_URL=http://localhost:3000
SANCTUM_STATEFUL_DOMAINS="${FRONTEND_URL}"
